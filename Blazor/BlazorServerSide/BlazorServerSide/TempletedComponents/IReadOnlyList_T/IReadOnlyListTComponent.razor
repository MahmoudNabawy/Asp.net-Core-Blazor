@page "/ireadonlylist"


<GridAutoComponent Items="employees" ColumnsToExcludeCSV="Id"></GridAutoComponent>

@code{

    public List<Employee> employees { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();

        employees = new List<Employee>();
        employees.AddRange(new Employee[3] {

            new Employee{ Id = 1, Name="John", Title="Developer", Department="Dev" },
            new Employee{ Id = 1, Name="Jane", Title="Developer", Department="Dev" },
            new Employee{ Id = 1, Name="Jeff", Title="Developer", Department="Dev" }
        });
    }

    public class Employee
    {

        public int Id { get; set; }
        public string Name { get; set; }
        public string Title { get; set; }
        public string Department { get; set; }
    }

}