
<h1>Counter</h1>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

    [Parameter]
    public EventCallback<int> SetCurrentCounter { get; set; }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        SetCurrentCounter.InvokeAsync(currentCount);
    }
}
